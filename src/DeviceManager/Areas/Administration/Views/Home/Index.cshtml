@model IEnumerable<DeviceManager.Data.DeviceManagerAppUser>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>Admistration</h2>

<table>
	<tr>
		<th>user's id</th>
		<th>Email</th>
		<th>user's roles</th>
		<th>Details</th>
	</tr>
	@foreach (var item in Model)
	{
		<tr>
			<td>@item.Id</td>
			<td>@item.Email</td>
			<td>
				@foreach(var role in item!.UserRoles)
				{
					@role.RoleId
					<br />
				}
			</td>
			<td>
				<a asp-action="UserDetails"
				   asp-area="Administration"
				   asp-controller="Manage"
				   asp-route-id="@item.Id">Deails</a>
			</td>
		</tr>
	}
</table>
@{
}
