@model DeviceManager.Data.Device
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<h2>Details</h2>
<table>
	<tr>
		<th>Id</th>
		<th>UserId</th>
		<th>Name</th>
		<th>Description</th>
		<th>DateAdded</th>
		<th>Edit</th>
		<th>Delete</th>
	</tr>
	<tr>
		<td>@Model.Id</td>
		<td>@Model.UserId</td>
		<td>@Model.Name</td>
		<td>@Model.Description</td>
		<td>@Model.DateAdded</td>
		<td>
			<a asp-area="Management"
			   asp-controller="UserDevices"
			   asp-action="Edit"
			   asp-route-id="@Model.Id"
			   asp-route-userId="@Model.UserId">Edit</a>
		</td>
		<td>
			<a asp-area="Management"
			   asp-controller="UserDevices"
			   asp-action="Delete"
			   asp-route-id="@Model.Id"
			   asp-route-userId="@Model.UserId">Delete</a>
		</td>
	</tr>
</table>

@{
}
