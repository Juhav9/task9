@model DeviceManager.Models.DeviceViewModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Delete</h2>

<form asp-action="Delete" method="post">
	<label>
		ID:<input asp-for="Id" value="@Model.Id" hidden readonly />
	</label>
	<br />
	<label>
		UserId:<input asp-for="UserId" value="@Model.UserId" hidden readonly />
	</label>
	<br />
	<label>
		Name:<input asp-for="Name" value="@Model.Name" readonly />
	</label>
	<br />
	<label>
		Description:<input asp-for="Description" value="@Model.Description" readonly />
	</label>
	<br />
	<label>
		DateAdded:<input asp-for="DateAdded" value="@Model.DateAdded" readonly />
	</label>
	<br />
	<button type="submit" value="Submit">Submit</button>
</form>

@{
}
